<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndexPerfilFragment">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:paddingTop="40dp"
            android:text="@string/profile"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user_image" />

        <TextView
            android:id="@+id/nome_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_avatar"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="64dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/nome_user"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_user"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/nome_user"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/num_viagens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/num_viagens"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_profile"
            android:layout_width="220dp"
            android:layout_height="58dp"
            android:layout_below="@id/num_viagens"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="-194dp"
            android:layout_marginEnd="75dp"
            android:background="@drawable/border_blue"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/edit_profile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:translationX="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_width="220dp"
            android:layout_height="58dp"
            android:layout_below="@id/edit_profile"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_red"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:translationX="-65dp" />

    </RelativeLayout>

</FrameLayout>